{
    "name": "metafilter/metafilter2024",
    "type": "project",
    "description": "Source code for MetaFilter websites.",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "bezhansalleh/filament-shield": "^3.2",
        "binarytorch/larecipe": "^2.7",
        "cviebrock/eloquent-sluggable": "^11.0",
        "cybercog/laravel-ban": "^4.9",
        "filament/filament": "^3.2",
        "filament/spatie-laravel-tags-plugin": "^3.2",
        "laravel/cashier": "^15.4",
        "laravel/framework": "^11.9",
        "laravel/horizon": "^5.0",
        "laravel/passport": "^12.0",
        "laravel/slack-notification-channel": "^3.2",
        "laravel/telescope": "^5.2",
        "laravel/tinker": "^2.9",
        "maatwebsite/excel": "^3.1",
        "maize-tech/laravel-markable": "^2.2",
        "matt-daneshvar/laravel-survey": "^0.4.0",
        "mews/purifier": "^3.4",
        "mpociot/versionable": "^4.4",
        "opcodesio/log-viewer": "^3.10",
        "pxlrbt/filament-activity-log": "^1.1",
        "rahulalam31/laravel-abuse-ip": "^1.2",
        "saloonphp/laravel-plugin": "^3.5",
        "saloonphp/saloon": "^3.9",
        "spatie/laravel-activitylog": "^4.8",
        "spatie/laravel-feed": "^4.4",
        "spatie/laravel-honeypot": "^4.5",
        "spatie/laravel-livewire-wizard": "^2.3",
        "spatie/laravel-permission": "^6.9",
        "spatie/laravel-sitemap": "^7.2",
        "spatie/laravel-tags": "^4.6",
        "spatie/schema-org": "^3.23",
        "spatie/valuestore": "^1.3",
        "stechstudio/filament-impersonate": "^3.13",
        "stephenjude/filament-debugger": "^3.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.13",
        "dragon-code/pretty-routes": "^3.4",
        "fakerphp/faker": "^1.23",
        "laravel/breeze": "^2.1",
        "laravel/dusk": "^8.2",
        "laravel/homestead": "^15.0",
        "laravel/pint": "^1.16",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "./larecipe-components/MetafilterDocs"
        }
    ]
}
